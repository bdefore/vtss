---
import PageLayout from '@layouts/PageLayout.astro'
import Container from '@components/Container.astro'
import CalendarEventList from '@components/CalendarEventList.astro'

import { EVENTS } from '@consts'
---

<PageLayout title={EVENTS.TITLE} description={EVENTS.DESCRIPTION}>
  <Container>
    <div class="space-y-10">
      <div class="animate font-semibold text-black dark:text-white">
        {EVENTS.TITLE}
      </div>
      <CalendarEventList type="meetups" id={import.meta.env.PUBLIC_MEETUPS_CALENDAR_ID} />
      <CalendarEventList type="shows" id={import.meta.env.PUBLIC_SHOWS_CALENDAR_ID} />
    </div>
  </Container>
</PageLayout>
