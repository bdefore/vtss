---
import { getCollection } from 'astro:content'
import PageLayout from '@layouts/PageLayout.astro'
import Container from '@components/Container.astro'
import { ABOUT } from '@consts'

const aboutMaterial = (await getCollection('about'))
const main = aboutMaterial.find(am => am.data.title?.toLowerCase() === 'about page content')

const { Content } = await main.render();
---

<PageLayout title={ABOUT.TITLE} description={ABOUT.DESCRIPTION}>
  <Container>
    <div class="space-y-10">
      <div class="animate font-semibold text-black dark:text-white">
        {ABOUT.TITLE}
      </div>
    </div>
    <article class="animate">
      <Content />
    </article>
  </Container>
</PageLayout>
